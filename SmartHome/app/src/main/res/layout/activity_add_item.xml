<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="com.smart.smarthome.AddItemActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seekBarSpeed"
        android:layout_centerHorizontal="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/layoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/addImageButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/no_image_icon_6"
                />

            <EditText
                android:id="@+id/addBarcodeEdit"
                android:hint="Enter Your Barcode"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/addNameEdit"
                android:hint="Enter Your Product Name"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/addTypeEdit"
                android:hint="Enter Your Product Type"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/addUnitEdit"
                android:hint="Enter Your Product Unit"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"/>

            <EditText
                android:id="@+id/addPriceEdit"
                android:hint="Enter Your Product Price"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"/>

            <EditText
                android:id="@+id/addMadeinEdit"
                android:hint="Enter Your Product Made in"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/addSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"
                android:gravity="center"
                />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
