<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="88dp"
    android:weightSum="1"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/imageShopItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:weightSum="1"
        >
    <TextView

        android:paddingTop="10dp"
        android:gravity="center"
        android:id="@+id/nameShopItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_weight="0.5" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/volumnShopItem"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#23ced9"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <TextView

            android:gravity="center"
            android:paddingTop="10dp"
            android:id="@+id/priceShopItem2"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView

            android:gravity="center_horizontal"
            android:id="@+id/priceShopItem3"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="2"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:weightSum="1"
        >




        <ImageButton
            android:id="@+id/IncreaseImageButton"
            android:layout_gravity="center"
            android:paddingRight="4dp"
            android:layout_width="match_parent"
            android:background="#0000"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_imageincreasebutton"/>

    </LinearLayout>


</LinearLayout>