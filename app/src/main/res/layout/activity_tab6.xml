<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@color/colorPrimary"
        android:id="@+id/Top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:textSize="16sp"
            android:gravity="center"
            android:text="Image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textColor="#f1f1f1"

            />

        <TextView
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Name                 Volume want"
                    android:maxLines="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
            android:textColor="#f1f1f1"

            />

                <TextView
                    android:textSize="16sp"
                    android:text="Price"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:textColor="#f1f1f1"

                    />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView

        android:clickable="true"
        android:focusable="true"
        android:background="#FAFAFA"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/Top"
        android:id="@+id/item_listShopping"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <ImageButton
                android:id="@+id/Additem2"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background= "@color/colorPrimaryDark"
                android:src="@mipmap/ic_add_black_24dp"/>

            <TextView
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity = "bottom|center"
                android:text="Add Item"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black_semi_transparent"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <ImageButton
                android:id="@+id/IncreaseItem2"
                android:paddingBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background= "@color/colorPrimaryDark"
                android:src="@mipmap/ic_launcherautoupdate"
                />

            <TextView
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity = "bottom|center"
                android:text="AutoUpdate"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black_semi_transparent"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <ImageButton
                android:id="@+id/DecreaseItem2"
                android:paddingBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background= "@color/colorPrimaryDark"
                android:src="@mipmap/ic_launcherbankpig"/>

            <TextView
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity = "bottom|center"
                android:text="Cheap Shop"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black_semi_transparent"

                />

            />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <ImageButton
                android:id="@+id/RemoveItem2"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:src="@mipmap/ic_clear_black_24dp"/>



            <TextView
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity = "bottom|center"
                android:text="Delete Item"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black_semi_transparent"

                />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>